doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        style
            include chat.css
    body#chat-screen
        div.status-bar
            div.status-bar__column
                span No Service
                i.fas.fa-wifi
            div.status-bar__column
                span 18:43
            div.status-bar__column
                span 110%
                i.fas.fa-battery-full.fa-lg
                i.fas.fa-bolt

        header.alt-header
            div.alt-header__column
                a(href='chats.html')
                    i.fas.fa-angle-left.fa-3x
            div.alt-header__column
                h1.alt-header__title#Rooo
                form#name
                    input(placeholder="Room Number", required, type="text")
                    button Enter

            div.alt-header__column
                span
                    i.fas.fa-search.fa-lg
                span
                    i.fas.fa-bars.fa-lg
        main.main-screen.main-chat#daejang
            div.chat__timestamp Sunday, Nov 28, 2021
           
               
        div#room
            
            form.reply#msg
                div.reply__column
                    i.far.fa-plus-square.fa-lg
                div.reply__column
                    input(type='text' placeholder='Write a message...')
                    i.far.fa-smile-wink.fa-lg
                    button
                        i.fas.fa-arrow-up        
        //- #no-mobile
        //-      span Your screen is too big &#x3160;&#x3160;
        script(src="https://kit.fontawesome.com/6478f529f2.js")
        script(src="/socket.io/socket.io.js")   
        script(src="/public/js/app.js")
        script(src='http://code.jquery.com/jquery-latest.js')
